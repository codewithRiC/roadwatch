# RoadWatch Environment Configuration
# Copy this to .env and modify as needed

# Development vs Production
NODE_ENV=development

# Backend Configuration
VITE_BACKEND_HOST=auto
VITE_BACKEND_PORT=8000

# API Configuration  
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=10000

# Debug Settings
VITE_DEBUG_MODE=true
VITE_SHOW_CONSOLE_LOGS=true

# Map Configuration
VITE_DEFAULT_MAP_CENTER_LAT=20.2961
VITE_DEFAULT_MAP_CENTER_LNG=85.8245
VITE_DEFAULT_MAP_ZOOM=13

# Network Settings
VITE_ALLOW_ANY_ORIGIN=true
VITE_CORS_ENABLED=true

# Performance Settings
VITE_ENABLE_PAGINATION=false
VITE_MAX_POTHOLES_DISPLAY=1000

# Mobile Optimization
VITE_MOBILE_OPTIMIZED=true
VITE_TOUCH_FRIENDLY=true
